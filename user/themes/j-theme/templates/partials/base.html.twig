{% set theme_config = attribute(config.themes, config.system.pages.theme) %}
<!doctype html>
<html lang="{{ grav.language.getActive ?: theme_config.default_lang }}">

<head>
    {% block head %}
    
    {# Google Tag Manager - Head #}
    <!-- Google Tag Manager -->
    <script>(function(w,d,s,l,i){w[l]=w[l]||[];w[l].push({'gtm.start':
    new Date().getTime(),event:'gtm.js'});var f=d.getElementsByTagName(s)[0],
    j=d.createElement(s),dl=l!='dataLayer'?'&l='+l:'';j.async=true;j.src=
    'https://www.googletagmanager.com/gtm.js?id='+i+dl;f.parentNode.insertBefore(j,f);
    })(window,document,'script','dataLayer','GTM-W35H3KW');</script>
    <!-- End Google Tag Manager -->
    
    {# Metadata #}
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="theme-color" content="#ffffff">
    {% include 'partials/metadata.html.twig' %}
    <title>{% if header.title %}{{ header.title|e('html') }} | {% endif %}{{ site.title|e('html') }}</title>
    
    {# Icon #}
    <link rel="icon" type="image/png" href="{{ url('theme://images/favicon-32x32.png') }}" sizes="32x32">
    <link rel="icon" type="image/png" href="{{ url('theme://images/favicon-16x16.png') }}" sizes="16x16">
    <link rel="apple-touch-icon" href="{{ url('theme://images/apple-touch-icon.png') }}" sizes="180x180">
    
    {# Canonical URL as full URL #}
    <link rel="canonical" href="{{ page.url(true, true) }}" />
    
    {# CSS #}
    {% block stylesheets %}
        {% do assets.addCss('https://fonts.googleapis.com/css?family=Lora:400,700i|Roboto:400,400i|Space+Mono|Architects+Daughter', 100) %}
        {% do assets.addCss('https://fonts.googleapis.com/icon?family=Material+Icons', 99) %}
        {% do assets.addCss('theme://css/normalize.css', 98) %}
        {% do assets.addCss('theme://css/theme.css', 97) %}
    {% endblock stylesheets %}
    {{ assets.css() }}
    
    {# JavaScripts #}
    {% block javascripts %}
        {% do assets.addJs('jquery', 100) %}
        {% do assets.addJs('theme://node_modules/material-components-web/dist/material-components-web.js', {'priority':99, 'group':'bottom'}) %}
        {% do assets.addJs('theme://js/theme.js', {'priority':98, 'group':'bottom'}) %}
    {% endblock javascripts %}
    {{ assets.js() }}
    
    {% endblock head %}
</head>

<body class="{{ page.header.body_classes }}">
 
  {# Google Tag Manager - Body #}
  <!-- Google Tag Manager (noscript) -->
  <noscript><iframe src="https://www.googletagmanager.com/ns.html?id=GTM-W35H3KW"
  height="0" width="0" style="display:none;visibility:hidden"></iframe></noscript>
  <!-- End Google Tag Manager (noscript) -->
  
  {% block page_navigation %}
  {% include 'partials/navigation.html.twig' %}
  {% endblock page_navigation %}
  
  <div id="container">
   
    {% block page_header %}
    <header id="page-header">
      {% include 'partials/header.html.twig' %}
    </header>
    {% endblock page_header %}
    
    {% block page_main %}
    <main>
      {% block main_content %}{% endblock main_content %}
    </main>
    {% endblock page_main %}
      
    <div id="sidebar">
      {% block sidebar_content %}{% endblock sidebar_content %}
    </div>
       
    {% block page_footer %}
    <footer>
      {% include 'partials/footer.html.twig' %}
    </footer>
    {% endblock page_footer %}
    
  </div>
  
  {% block bottom %}
    {{ assets.js('bottom') }}
    <script>mdc.autoInit()</script>
  {% endblock %}
  
</body>
</html>
